<% if controller_name != "sessions" %>
  <%= link_to "登入", new_session_path(resource_name), class: "text-decoration-none m-2" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to "還沒有帳號？", new_registration_path(resource_name), class: "text-decoration-none m-2" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to "忘記密碼", new_password_path(resource_name), class: "text-decoration-none m-2" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to "沒收到認證通知？", new_confirmation_path(resource_name), class: "text-decoration-none m-2" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
  <%= link_to "沒收到解鎖通知?", new_unlock_path(resource_name), class: "text-decoration-none m-2" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "登入自 #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: "text-decoration-none m-2" %>
  <% end %>
<% end %>
