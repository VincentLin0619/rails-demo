<fieldset
    style="border-left: 5px solid #bbb; margin-bottom: 10px; padding: 10px"
  >
    <legend>Attachment</legend>
    <div class="form-group">
      <div><%= f.inspect %></div>
      <%= f.label :attachment %>
      <%= f.file_field :attachment, multiple: true, :class => "form-control" %>
        <% if f.object.attachment.present? %>
          已上傳檔案<%= link_to f.object.description, f.object.attachment.url, :target => "_blank" %>
        <% end %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, :class => "form-control" %>
    </div>
    <%= link_to_remove_association "移除這個檔案", f, :class => "btn btn-danger" %>
  </fieldset>
