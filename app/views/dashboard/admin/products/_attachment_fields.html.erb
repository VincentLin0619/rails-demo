<div class="nested-fields justify-content-center">
  <div data-controller="hello">
    <input data-target="hello.name" type="text">
    <button data-action="click->hello#connect">connect</button>
    <span data-target="hello.output"></span>
  </div>
  <div class="row">

  </div>
  <div class="mb-3">
    <%= f.file_field :image, onchange: "readURL(this);", class: "form-control img-upload" %>
    <%= f.hidden_field :image_cache, value: f.object.image_cache %>
  </div>
  <div class="mb-3">
        <div id="imgUpload">
      </div>
    <%= f.label "圖片描述", class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.check_box :remove_image %>
  </div>
      <%= image_tag f.object.image.url, class: "rounded mx-auto d-block img-fluid product-img" if f.object.image.url.present? %>
  <div class="mb-3">
      <%= f.object.description %>
    <%= link_to_remove_association "移除這個檔案", f, class: "btn btn-danger" unless f.object.new_record? %>
  </div>
</div>
<script>
function readURL(input) {
  var files = document.querySelectorAll('img-upload')
  if (input.files && input.files[0]) {
      var reader = new FileReader();
        reader.onload = function (e) {
          var prevImg = document.getElementById('imgUpload');
          var result = e.target.result; //預覽圖片的data並塞一個element進去
          prevImg.innerHTML = '<img src="' + result + '" id ="prevImg" class= "rounded mx-auto d-block img-fluid" />';
        };
      reader.readAsDataURL(input.files[0]);
    }
      console.log(files.length)
  }
</script>
