<!DOCTYPE html>
<html>
  <head>
    <title>RailsDemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= stylesheet_pack_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
      <% if current_user %>
        <%= render "share/nav_user" %>
      <% else %>
        <%= render "share/nav" %>
      <% end %>
      <div class="container">

        <% if notice %>
        <p class="alert alert-success my-2"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="alert alert-danger my-2"><%= alert %></p>
        <% end %>
        <div class= "paginate my-5">
        <%= will_paginate @paginate if @paginate %>
        </div>
        <%= yield %>
    </div>
  </body>
</html>
